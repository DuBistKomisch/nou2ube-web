<ModalDialog @onClose={{@close}} @translucentOverlay={{true}} @containerClass="app-dialog">
  {{#if @title}}
    <div class="top">
      {{@title}}
    </div>
  {{/if}}

  <div class="middle">
    {{yield}}
  </div>

  <div class="bottom">
    {{#if @accept}}
      <a role="button" {{action @accept}}>{{if @acceptLabel @acceptLabel "Yes"}}</a>
      <a role="button" {{action (if @cancel @cancel @close)}}>{{if @cancelLabel @cancelLabel "No"}}</a>
    {{else}}
      <a role="button" {{action @close}}>Close</a>
    {{/if}}
  </div>
</ModalDialog>
