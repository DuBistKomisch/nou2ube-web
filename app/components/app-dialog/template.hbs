<ModalDialog @onClose={{@close}} @translucentOverlay={{true}} @containerClass="app-dialog">
  {{#if @title}}
    <div class="top">
      {{@title}}
    </div>
  {{/if}}

  <div class="middle">
    {{yield}}
  </div>

  {{#if @accept}}
    <div class="bottom">
      <button type="button" {{on "click" @accept}}>{{if @acceptLabel @acceptLabel "Yes"}}</button>
      <button type="button" {{on "click" (if @cancel @cancel @close)}}>{{if @cancelLabel @cancelLabel "No"}}</button>
    </div>
  {{else if @close}}
    <div class="bottom">
      <button type="button" {{on "click" @close}}>Close</button>
    </div>
  {{/if}}
</ModalDialog>
