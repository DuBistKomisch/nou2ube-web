<div>
  <img src={{this.subscription.channel.thumbnail}} alt={{this.subscription.channel.title}}>
  <div>
    <p class="title"><a href="https://www.youtube.com/channel/{{this.subscription.channel.apiId}}">{{this.subscription.channel.title}}</a></p>
    <p>{{pluralize this.items.length "video"}}, <span title={{this.totalDuration}}>{{moment-duration this.totalDuration "seconds"}}</span></p>
    {{#if (eq this.state "new")}}
      <p><a role="button" {{action this.markAllLater}}>Watch All Later</a> &middot; <a role="button" {{action this.ignoreAll}}>Ignore All</a></p>
    {{else}}
      <p><a role="button" {{action this.ignoreAll}}>Watched All</a></p>
    {{/if}}
  </div>
</div>
{{#each this.items as |item|}}
  <DisplayItem @item={{item}} />
{{/each}}
