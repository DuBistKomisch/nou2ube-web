{{!-- can't override parent's separator, have to just replace whole title --}}
{{title this.titleNotification " NoUTube" replace=true}}

<PortalContent @for="menu-bar-extras">
  <a role="button" {{on "click" this.toggleSorting}} title="Sorting settings"><SvgIcon @name="sliders" /></a>
  <a role="button" {{on "click" this.settings.switchSize}} title="Switch player size"><SvgIcon @name="maximize" /></a>
</PortalContent>

{{#if this.showSorting}}
  <AppDialog @title="Sorting Settings" @close={{this.toggleSorting}}>
    <SortingSettings />
  </AppDialog>
{{/if}}

{{#if this.newSubscriptions}}
  <SectionHeader><SvgIcon @name="gift" /> New Videos</SectionHeader>
  {{#if this.settings.channelGroup}}
    {{#each this.newSubscriptions as |subscription|}}
      <DisplaySubscription @subscription={{subscription}} @state="new" />
    {{/each}}
  {{else}}
    <DisplayUngrouped @items={{newItems}} />
  {{/if}}
{{/if}}

{{#if this.laterSubscriptions}}
  <SectionHeader><SvgIcon @name="bookmark" /> Watch Later</SectionHeader>
  {{#if this.settings.channelGroup}}
    {{#each this.laterSubscriptions as |subscription|}}
      <DisplaySubscription @subscription={{subscription}} @state="later" />
    {{/each}}
  {{else}}
    <DisplayUngrouped @items={{laterItems}} />
  {{/if}}
{{/if}}

{{#unless this.anyItems}}
  <SectionHeader><SvgIcon @name="slash" /> No Videos</SectionHeader>
  <div class="message">
    <p>You've watched everything for now, check again later.</p>
  </div>
{{/unless}}
